<div class="card bg-white p-4 shadow-sm rounded">
  <h1 class="mb-0">My Favorites</h1>
</div>

<% if @favorites.any? %>
  <div class="favorites-list">
    <% @favorites.each do |favorite| %>
      <div class="favorite-item card bg-white rounded shadow-sm mb-3">
        <div class="row no-gutters align-items-center">
          <div class="col-4">
            <%= image_tag favorite.location.image, class: "favorite-image img-fluid rounded-left", style: "height: 100px; object-fit: cover;" if favorite.location.image.attached? %>
          </div>
          <div class="col-8">
            <div class="card-body">
              <h5 class="card-title mb-1"><%= link_to favorite.location.name, location_path(favorite.location), class: "text-decoration-none" %></h5>
              <p class="card-text">Rating: <%= favorite.location.rating %>/5</p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p class="mt-3">You haven't saved any favorites yet.</p>
<% end %>
