<div class="card bg-white p-5 shadow-sm rounded mb-4">
  <h1 class="mb-0 text-center">My Favorites</h1>
</div>

<% if @favorites.any? %>
  <div class="favorites-list p-3">
    <% @favorites.each do |favorite| %>
      <div class="favorite-item card bg-white rounded shadow-sm mb-4 p-3">
        <div class="row no-gutters align-items-center">
          <div class="col-4">
            <%= image_tag favorite.location.image, class: "favorite-image img-fluid rounded-left", style: "height: 100px; object-fit: cover;" if favorite.location.image.attached? %>
          </div>
          <div class="col-8">
            <div class="card-body p-3">
              <h5 class="card-title mb-2"><%= link_to favorite.location.name, location_path(favorite.location), class: "text-decoration-none text-black" %></h5>
              <p class="card-text mb-0">Rating: <%= favorite.location.rating %>/5</p>
               <%= link_to location_favorite_path(favorite.location, favorite), data: { 'turbo-method': :delete, 'turbo-confirm': "Are you sure you want to delete this from your favourites?" }, style: 'text-decoration:none;' do  %>
               <i class="fa-regular fa-trash-can"></i>
               <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p class="mt-4 p-3">You haven't saved any favorites yet.</p>
<% end %>
