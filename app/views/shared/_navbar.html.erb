<nav class="bottom-nav">
  <div class="bottom-nav-container">
    <% if user_signed_in? %>

      <%= link_to root_path, class: "nav-item" do %>
      <div class="icon-container">
        <i class="fa-regular fa-map"></i>
      </div>
      <p>Map</p>
      <% end %>
      <%= link_to chats_path, class: "nav-item" do %>
      <div class="icon-container">
        <i class="fa-solid fa-comment"></i>
      </div>
      <p>Chats</p>
      <% end %>
      <div class="icon-container">
        <%= image_tag 'swimfinder.png', alt: 'Swimfinder', class: 'swimfinder-icon' %>
      </div>
      <%= link_to favorites_path, class: "nav-item" do %>
      <div class="icon-container">
        <i class="fa-solid fa-heart-circle-check"></i>
      </div>
      <p>Favourites</p>
      <% end %>
      <%= link_to user_path(current_user.username), class: "nav-item" do %>
      <div class="icon-container">
        <i class="fa-regular fa-user"></i>
      </div>
      <p>Profile</p>
      <% end %>
    <% end %>

    <% if not user_signed_in? %>
      <%= link_to new_user_session_path, class: "nav-item" do %>
      <div class="icon-container">
        <i class="fa-regular fa-user"></i>
      </div>
      <p>Sign In</p>
      <% end %>
    <% end %>

  </div>
