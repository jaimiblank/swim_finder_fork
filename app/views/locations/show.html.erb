<div class="location-header card bg-white shadow-sm rounded mb-4">
  <div class="row no-gutters">
    <div class="col-md-6">
      <%= image_tag @location.image, class: "img-head img-fluid rounded-left", style: "height: 300px; object-fit: cover;" if @location.image.attached? %>
    </div>
    <div class="col-md-6">
      <div class="card-body d-flex flex-column justify-content-between h-100">
        <h1 class="card-title text-center"><%= @location.name %></h1>
        <p class="card-text text-center">
          <% average_rating = @location.reviews.average(:rating).to_f.round(1) %>
          <% average_rating.to_i.times do %>
            <i class="fas fa-star text-warning"></i>
          <% end %>
          <% if average_rating % 1 >= 0.5 %>
            <i class="fas fa-star-half-alt text-warning"></i>
            <% (4 - average_rating.to_i).times do %>
              <i class="far fa-star text-warning"></i>
            <% end %>
          <% else %>
            <% (5 - average_rating.to_i).times do %>
              <i class="far fa-star text-warning"></i>
            <% end %>
          <% end %>
          <span class="ml-2">(<%= average_rating %>)</span>
        </p>
        <%= button_to [@location, Favorite.new], method: :post, class: "btn-favorite-heart mx-2", title: "Add to Favorites" do %>
          <i class="fas fa-heart"></i>
        <% end %>
        <%= link_to "Add a Review", new_location_review_path(@location), class: "btn btn-add-review" %>
      </div>
    </div>
  </div>
</div>
<div class="reviews-section card bg-white shadow-sm rounded p-4">
  <h2 class="mb-4">Reviews</h2>
  <% if @location.reviews.any? %>
    <% @location.reviews.each do |review| %>
      <div class="review-item card bg-white shadow-sm rounded mb-4 p-3">
        <div class="d-flex justify-content-between align-items-center mb-2">
          <div class="d-flex align-items-center">
            <%= image_tag review.user.image, class: "rounded-circle mr-3", style: "width: 30px; height: 30px; object-fit: cover;" if review.user.image.attached? %>
            <h5 class="mb-0 ml-3 px-2"><%= link_to review.user.name, user_path(review.user.username), class: "text-decoration-none text-dark", style: "font-family: inherit;" %></h5>
          </div>
          <small class="text-muted">
            <% review.rating.to_i.times do %>
              <i class="fas fa-star text-warning"></i>
            <% end %>
            <% (5 - review.rating.to_i).times do %>
              <i class="far fa-star text-warning"></i>
            <% end %>
          </small>
        </div>
        <%= image_tag review.image, class: "img-review img-fluid mb-3", style: "max-height: 300px; object-fit: cover;" if review.image.attached? %>
        <p class="mb-0"><%= review.content %></p>
        <% if review.amenities.present? %>
          <div class="mt-2">
            <strong>Amenities:</strong>
            <ul class="list-inline">
              <% review.amenities.each do |amenity| %>
                <li class="list-inline-item"><%= amenity.title %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
      </div>
    <% end %>
  <% else %>
    <p>No reviews yet. Be the first to review this location!</p>
  <% end %>
</div>
