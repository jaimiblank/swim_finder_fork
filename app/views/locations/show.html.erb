<div class="location-header card bg-white shadow-sm rounded mb-4">
  <div class="row no-gutters">
    <div class="col-md-6">
      <%= image_tag @location.image, class: "img-fluid rounded-left", style: "height: 300px; object-fit: cover;" if @location.image.attached? %>
    </div>
    <div class="col-md-6">
      <div class="card-body d-flex flex-column justify-content-between h-100">
        <h1 class="card-title"><%= @location.name %></h1>
        <p class="card-text">Rating: <%= @location.rating %>/5</p>
          <%= button_to "Add to Favorites", favorites_path(location_id: @location.id), method: :post, class: "btn align-self-start", style: "background-color: #1295B1; color: white;" %>
      </div>
    </div>
  </div>
</div>

<div class="reviews-section card bg-white shadow-sm rounded p-4">
  <h2 class="mb-4">Reviews</h2>
  <% if @location.reviews.any? %>
    <% @location.reviews.each do |review| %>
      <div class="review-item mb-3 pb-3 border-bottom">
        <div class="d-flex justify-content-between align-items-center mb-2">
          <div class="d-flex align-items-center">
            <%= image_tag review.user.image, class: "rounded-circle mr-2", style: "width: 30px; height: 30px; object-fit: cover;" if review.user.image.attached? %>
            <h5 class="mb-0"><%= link_to review.user.name, user_path(review.user.username), class: "text-decoration-none" %></h5>
          </div>
          <small class="text-muted">Rating: <%= review.rating %>/5</small>
        </div>
        <p><%= review.content %></p>
      </div>
    <% end %>
  <% else %>
    <p>No reviews yet. Be the first to review this location!</p>
  <% end %>
</div>
